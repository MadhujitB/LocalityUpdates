<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dada.localityupdate" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />



    <application
        android:name="com.example.dada.localityupdate.UsingParseKey"
        android:allowBackup="true"
        android:fullBackupContent="@xml/mybackupscheme"
        android:icon="@mipmap/ic_launcher_2"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.dada.localityupdate.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.dada.localityupdate.MainActivity"
            android:label="@string/app_name"
            android:configChanges="orientation|screenSize"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name="com.example.dada.localityupdate.RegistrationActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name="com.example.dada.localityupdate.UpdateActivity"
            android:label="@string/title_activity_update"
            android:theme="@style/AppThm" >
        </activity>
        <activity
            android:name="com.example.dada.localityupdate.StatusDetailActivity"
            android:label="@string/title_activity_status_detail"
            android:theme="@style/AppThm" >
        </activity>

        <activity
            android:name="com.example.dada.localityupdate.MyComments"
            android:label="@string/title_activity_my_comments"
            android:configChanges="orientation|screenSize"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name="com.example.dada.localityupdate.Main2Activity"
            android:label="@string/app_name"
            android:configChanges="orientation|screenSize"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
    </application>

</manifest>
